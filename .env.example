# Application Configuration
VITE_APP_NAME="Customer Support System"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# Database Configuration
MONGODB_URI="mongodb+srv://<username>:<password>@<cluster-url>/?retryWrites=true&w=majority&appName=<app-name>"
MONGODB_DB_NAME="your-db-name"

# Server Configuration
PORT="3002"
NODE_ENV="development"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"
VITE_GOOGLE_CLIENT_ID="your-google-oauth-client-id"
VITE_REDIRECT_URI="http://localhost:5173/auth/google/callback"

# Email Configuration
EMAIL_SERVICE="sendgrid"
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="apikey"
SMTP_PASS="your-smtp-password-or-api-key"
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="support@example.com"
EMAIL_TEST_RECIPIENT="test-recipient@example.com"
EMAIL_FROM_NAME="Support Team"
EMAIL_ALLOW_DEMO="false"

# Company Info
COMPANY_NAME="Your Company Name"
SUPPORT_PHONE="(+000) 000 0000"
FRONTEND_URL="http://localhost:5173"

# API Configuration
VITE_API_BASE_URL="http://localhost:3002"
VITE_API_TIMEOUT="10000"

# File Upload Configuration
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,txt"

# Storage Configuration
STORAGE_TYPE="local"
UPLOAD_PATH="./uploads"

# Security Configuration
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX_REQUESTS="100"

# OpenAI Configuration
VITE_OPENAI_API_KEY="your-openai-api-key"